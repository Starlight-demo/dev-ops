pipeline {
    agent none
    environment {
        SERVER_CREDENTIALS = 'creds'
        WEBHOOK_URL = credentials('')
        BUCKET = 'artifacts-s3'
        REGION = 'eu-central-1'
    }
    stages {
        stage('Build') {
            agent { label 'java && jdk' }
            steps {
                git branch: 'dev', url: 'https://github.com/Team-Maksym/backend.git'
                sh '''
                    chmod 744 ./mvnw
                    ./mvnw clean package
                    mv ./target/demo3*.jar ./demo3.jar
                    tar -cvzf demo3-${BUILD_NUMBER}.tar.gz ./demo3.jar
                '''
                withAWS(credentials: '${SERVER_CREDENTIALS}', region: '${REGION}') {
                    s3Upload(file: 'demo3-${BUILD_NUMBER}.tar.gz', bucket: '${BUCKET}')
                }
            }
        }
        stage('Deploy') {
            agent { label 'java && target' }
            steps {
                withAWS(credentials: '${SERVER_CREDENTIALS}', region: '${REGION}') {
                    s3Download(file:'demo3-${BUILD_NUMBER}.tar.gz', bucket:'${BUCKET}', path:'demo3-${BUILD_NUMBER}.tar.gz')
                }
                sh '''
                    tar xpvf demo3-${BUILD_NUMBER}.tar.gz
                    chmod 755 ./demo3.jar
                    rm demo3-${BUILD_NUMBER}.tar.gz
                    java -jar ./demo3.jar &
                '''
            }
        }
    }
}